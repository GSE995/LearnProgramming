<Window x:Class="TaskTwoTimer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskTwoTimer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="StartButton" Content="Start" HorizontalAlignment="Left" Margin="25,167,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click"/>
        <Button x:Name="StopButton" Content="Stop" HorizontalAlignment="Left" Margin="104,167,0,0" VerticalAlignment="Top" Width="75" Click="StopButton_Click"/>
        <ProgressBar x:Name="ProgressField" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="464" Margin="25,137,0,0" ValueChanged="ProgressBar_ValueChanged"/>
        <Button x:Name="Reset" Content="Reset" HorizontalAlignment="Left" Margin="184,167,0,0" VerticalAlignment="Top" Width="75" Click="Reset_Click"/>
        <TextBox x:Name="ValueProgress" HorizontalAlignment="Left" Height="23" Margin="25,109,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
